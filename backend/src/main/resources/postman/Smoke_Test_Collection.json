{
	"info": {
		"_postman_id": "smoke-test-001",
		"name": "Campus Marketplace - Smoke Tests",
		"description": "One-click smoke test flow: Login → Create Listing → Send Message → Request to Buy → Mark as Sold",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Service is UP\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"UP\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/health",
					"host": ["{{base_url}}"],
					"path": ["api", "health"]
				}
			}
		},
		{
			"name": "2. Login as Seller",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response has token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    pm.environment.set('jwt_token', jsonData.token);",
							"    pm.environment.set('seller_id', jsonData.user.id);",
							"    pm.environment.set('seller_email', jsonData.user.email);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"seller@demo.campusmarket.com\",\n  \"password\": \"demo123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "login"]
				}
			}
		},
		{
			"name": "3. Get Categories",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Has categories\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('array');",
							"    if (jsonData.length > 0) {",
							"        pm.environment.set('category_id', jsonData[0].id);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/categories",
					"host": ["{{base_url}}"],
					"path": ["api", "categories"]
				}
			}
		},
		{
			"name": "4. Create Listing",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Listing created\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.environment.set('listing_id', jsonData.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{jwt_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"sellerId\": \"{{seller_id}}\",\n  \"title\": \"Smoke Test Listing - MacBook Pro\",\n  \"description\": \"Test listing created by smoke test automation\",\n  \"price\": 1299.99,\n  \"categoryId\": \"{{category_id}}\",\n  \"condition\": \"LIKE_NEW\",\n  \"images\": \"[\\\"https://images.unsplash.com/photo-1517336714731-489689fd1ca8?w=800\\\"]\",\n  \"status\": \"ACTIVE\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/listings",
					"host": ["{{base_url}}"],
					"path": ["api", "listings"]
				}
			}
		},
		{
			"name": "5. Login as Buyer",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response has token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    pm.environment.set('buyer_jwt_token', jsonData.token);",
							"    pm.environment.set('buyer_id', jsonData.user.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"buyer@demo.campusmarket.com\",\n  \"password\": \"demo123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/login",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "login"]
				}
			}
		},
		{
			"name": "6. Send Message",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Message sent\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.environment.set('message_id', jsonData.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{buyer_jwt_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"listingId\": \"{{listing_id}}\",\n  \"toUserId\": \"{{seller_id}}\",\n  \"content\": \"Hi! Is this item still available? I'm interested in buying it.\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/messages",
					"host": ["{{base_url}}"],
					"path": ["api", "messages"]
				}
			}
		},
		{
			"name": "7. Request to Buy",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Transaction created\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.environment.set('transaction_id', jsonData.id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/transactions/request-to-buy?listingId={{listing_id}}&buyerId={{buyer_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "transactions", "request-to-buy"],
					"query": [
						{
							"key": "listingId",
							"value": "{{listing_id}}"
						},
						{
							"key": "buyerId",
							"value": "{{buyer_id}}"
						}
					]
				}
			}
		},
		{
			"name": "8. Mark as Sold (Seller)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Transaction marked as sold\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"COMPLETED\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{jwt_token}}",
							"type": "string"
						}
					]
				},
				"method": "PATCH",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/transactions/{{transaction_id}}/mark-sold?sellerId={{seller_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "transactions", "{{transaction_id}}", "mark-sold"],
					"query": [
						{
							"key": "sellerId",
							"value": "{{seller_id}}"
						}
					]
				}
			}
		},
		{
			"name": "9. Verify Listing Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Listing is SOLD\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"SOLD\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/listings/{{listing_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "listings", "{{listing_id}}"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}

